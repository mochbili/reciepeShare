<%= render "shared/errors", object: @chef %>

<div class="row">
  <div class="container">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <%= form_for @chef do |f| %>

        <%= f.label :chefname, "Name" %>
        <%= f.text_field :chefname %>

        <%= f.label :email %>
        <%= f.email_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit @chef.new_record? ? "Register" : "Update", class: "btn btn-success" %>

        <% end %>
      </div>
      <h2>Already have an account? Please <%= link_to "Login", login_path, class: "btn btn-primary" %></h2>
    </div>
  </div>
</div>
