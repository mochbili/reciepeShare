<%= render "shared/errors", object: @chef %>

<div class="container">
  <div class="row">
    <div class="well col-md-8 col-md-offset-2">
      <%= form_for @chef do |f| %>

      <%= f.label :chefname, "Name" %>
      <%= f.text_field :chefname %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit @chef.new_record? ? "Register" : "Update", class: "btn btn-success" %>

      <% end %>
    </div>
  </div>  
</div>
