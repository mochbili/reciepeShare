<%= render "shared/pagetitle", title: "All Chefs" %>

<div class="container">
  <div class="row">
    <%= will_paginate %>
  </div>
</div>

<% @chefs.each do |chef| %>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 center">
        <%= link_to gravatar_for(chef, size: 200), chef_path(chef) %>
        <h4><%= link_to chef.chefname, chef_path(chef) %></h4>
      </div>
    </div>
  </div>
  <hr>
<% end %>

<div class="container">
  <div class="row">
    <%= will_paginate %>
  </div>
</div>
