<!-- navigation -->
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <%= link_to "recipeshare", root_path, class: "btn btn-success", id: "logo" %>

    <ul class="nav-item">
      <li class="dropdown">
        <%= link_to "#", class: "btn btn-success dropdown-toggle", "data-toggle" => "dropdown" do %>
          Styles <b class="caret"></b>
        <% end %>
        <ul class="dropdown-menu">
          <% Style.all.each do |style| %>
            <li><%= link_to style.name, style_path(style) %></li>
          <% end %>
        </ul>
      </li>
    </ul>

    <ul class="nav-item">
      <li class="dropdown">
        <%= link_to "#", class: "btn btn-success dropdown-toggle", "data-toggle" => "dropdown" do %>
          Ingredient <b class="caret"></b>
        <% end %>
        <ul class="dropdown-menu">
          <% Ingredient.all.each do |ing| %>
            <li><%= link_to ing.name, ingredient_path(ing) %></li>
          <% end %>
        </ul>
      </li>
    </ul>

    <% if logged_in? %>
      <div class="nav-item">
        <%= link_to "New Recipe", new_recipe_path, class: "btn btn-default btn-primary" %>
      </div>

      <ul class="nav-item pull-right">
        <li class="dropdown">
          <%= link_to "#", class: "btn btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
            <%= current_user.chefname %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "View Profile", chef_path(current_user) %></li>
            <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
            <li class="devider"></li>
            <li><%= link_to "Logout", logout_path %></li>
          </ul>
        </li>
      </ul>
    <% else %>
      <div class="nav-item pull-right">
        <%= link_to "Login", login_path, class: "btn btn-default btn-primary" %>
      </div>
    <% end %>
  </div>
</nav>
<!-- end navigation -->
